{
    "manifest_version": 3,
    "name": "Save MyFlixer",
    "description": "Save Whached Movies and Series on MyFlixer",
    "version": "1.0",
    "action": {
        "default_popup": "main.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [{
        "js": ["scripts/inject.js"],
        "matches": [
            "https://myflixer.to/*"
        ],
        "run_at": "document_idle"
    }]
}